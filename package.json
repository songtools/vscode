{
	"name": "songtools",
	"displayName": "Song Tools",
	"description": "Tools for working with chords and lyrics.",
	"version": "0.0.1",
	"publisher": "craiggwilson",
	"engines": {
		"vscode": "^0.10.8"
	},
	"categories": [
		"Languages"
	],
    "repository": {
        "type": "git",
        "url": "https://github.com/songtools/vscode"
    },
	"activationEvents": [
        "onLanguage:chordsOverLyrics",
        "onCommand:songtools.format",
		"onCommand:songtools.showPreview"
	],
	"main": "./out/src/main",
	"contributes": {
        "languages": [
            {
                "id": "chordsOverLyrics",
                "extensions": [],
                "aliases": ["Chords Over Lyrics"]
            }],
		"commands": [
            {
                "command": "songtools.format",
                "title": "Format Song"
		    },
            {
                "command": "songtools.showPreview",
                "title": "Show Preview"
            }]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
	},
    "dependencies": {
        "diff-match-patch": "~1.0.0"
    },
	"devDependencies": {
		"typescript": "^1.7.5",
		"vscode": "^0.11.0"
	},
    "configuration": {
        "type": "object",
        "title": "Song Tools configuration",
        "properties": {
            "songtools.formatOnSave": {
                "type": "boolean",
                "default": true,
                "description": "Runs 'songfmt' on save."
            }
        }
    }
}